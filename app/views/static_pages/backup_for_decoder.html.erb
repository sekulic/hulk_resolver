
      <div class="bs-docs-section">
        <div class="row">
          <div class="col-lg-12">
            <div class="page-header">
              <h1 id="forms">Lost in Traslation</h1>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-6">
            <div class="well bs-component">
              <form class="form-horizontal">
                <fieldset>
               	<legend>Copy/Paste Messages.</legend>
				<%= form_tag root_path, :multipart => true, method: :post, :html => { :class => 'form-horizontal' } do %>
                  <div class="form-group">
                    <label for="textArea" class="col-lg-3 control-label">ENCODED MESSAGE 1</label>
                    <div class="col-lg-9">
                      <span class="help-block">==BEGIN-ENCODED-MESSAGE==</span>	
      				  <%= text_area_tag :code1, nil, class: 'form-control' , :rows => 4 %>
                      <span class="help-block">==END-ENCODED-MESSAGE==</span>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="textArea" class="col-lg-3 control-label">DECODED MESSAGE 1</label>
                    <div class="col-lg-9">
      				  <span class="help-block">==BEGIN-DECODED-MESSAGE==</span>
      				  <%= text_area_tag :text1, nil, class: 'form-control' , :rows => 4  %>
                      <span class="help-block">==END-DECODED-MESSAGE==</span>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="textArea" class="col-lg-3 control-label">ENCODED MESSAGE 2</label>
                    <div class="col-lg-9">
                      <span class="help-block">==BEGIN-ENCODED-MESSAGE==</span>	
      				  <%= text_area_tag :code2, nil, class: 'form-control' , :rows => 4  %>
                      <span class="help-block">==END-ENCODED-MESSAGE==</span>
                    </div>
                  </div>  
				  <div class="form-group">
				  	<div class="col-lg-4 col-lg-offset-3">
					<%= submit_tag "result", :class => 'btn btn-danger' %> 
				  	</div>
				  </div>                  
				<% end %>
                                                 
                </fieldset>
              </form>
            </div>
          </div>
          <div class="col-lg-6">
          	<legend>DECODED MESSAGE 2:</legend>
			<%= @result %>
          	<br />
			<%= @result2 %>          
          </div>			          

        </div>
      </div>
