
      <div class="bs-docs-section">
        <div class="row">
          <div class="col-lg-12">
            <div class="page-header">
              <h1 id="forms">Fibonacci</h1>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-6">
            <div class="well bs-component">
              <form class="form-horizontal">
                <fieldset>
                  <legend>Enter distance in LY</legend>
				<%= form_tag fibonacci_path, :multipart => true, method: :post, :html => { :class => 'form-horizontal' } do %>
                  <div class="form-group">
                    <label for="textArea" class="col-lg-4 control-label">Distance in LY</label>
                    <div class="col-lg-8">
      				  <%= number_field_tag :number, nil, class: 'form-control'   %>
                    </div>
                  </div>
				<%= submit_tag "result", :class => 'btn btn-warning' %>                   
				<% end %>                                                     
                </fieldset>
              </form>
            </div>
          </div>
          <div class="col-lg-6">
			<%= @result %>        
          </div>			          

        </div>
      </div>
